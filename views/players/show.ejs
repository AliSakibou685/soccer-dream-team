    <p>Notes: <%- '<br />' + application.notes.replaceAll('\n', '<br />') %></p>
    <% } %> <% if (application.postingLink) { %>
    <a href="<%= application.postingLink %>" target="_blank">View job posting</a>
    <% } %>
    
    <p>Current Status: <%= application.status %></p>
    
    <a href="/applications/<%= application._id %>/edit">EDIT</a>
    
    <form
      action="/applications/<%= application._id %>?_method=DELETE"
      method="POST"
    >
      <button type="submit">🗑️</button>
    </form>
    
    <%- include('../partials/footer.ejs') %>
    